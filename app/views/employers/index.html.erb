<p id="notice"><%= notice %></p>

<h1>Listing Employers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Address</th>
      <th>About</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= link_to employer.company_name, employer %></td>
        <td><%= employer.address %></td>
        <td><%= employer.about %></td>
        <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
        <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

