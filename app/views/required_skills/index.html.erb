<p id="notice"><%= notice %></p>

<h1>Listing Required Skills</h1>

<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>Skill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @required_skills.each do |required_skill| %>
      <tr>
        <td><%= required_skill.job %></td>
        <td><%= required_skill.skill %></td>
        <td><%= link_to 'Show', required_skill %></td>
        <td><%= link_to 'Edit', edit_required_skill_path(required_skill) %></td>
        <td><%= link_to 'Destroy', required_skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

